{
  "name": "show-host-name",
  "description": "View your hostname",
  "version": "1.5",
  "homepage_url": "https://github.com/hursit/chrome-show-hostname-extension",
  "manifest_version": 2,
  "author": "Hur≈üit Topal",
  "icons": {
    "32": "data/icon-32.png",
    "64": "data/icon-64.png",
    "128": "data/icon-128.png"
  },
  "browser_action": {
    "default_title": "Display your hostname",
    "default_popup": "data/index.html",
    "default_icon": {
      "32": "data/icon-32.png",
      "64": "data/icon-64.png",
      "128": "data/icon-128.png"
    }
  },
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
